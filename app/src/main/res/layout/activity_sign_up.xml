<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    tools:ignore="MissingClass">

    <TextView
        android:id="@+id/full_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#C17A7A"
        android:text="Full Name"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:layout_marginEnd="10dp"/>


    <EditText
        android:id="@+id/full_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/full_name_label"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:hint="John Doe" />

    <TextView
        android:id="@+id/email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#C17A7A"
        android:text="Email"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:layout_below="@+id/full_name_edit_text"
        android:layout_margin="16dp"
        android:backgroundTint="@color/teal_700"
        android:backgroundTintMode="add"
        />

    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_label"
        android:hint="john@doe.com"
        android:layout_margin="16dp"
        android:inputType="textEmailAddress"/>

    <TextView
        android:id="@+id/spinner_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_edit_text"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Courses"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinner_courses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_text_view"
        android:layout_margin="16dp"
        android:entries="@array/items_array"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/gender_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_courses"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Gender" />

    <RadioGroup
        android:id="@+id/gender"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_courses"
        android:layout_marginStart="16dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender"
            android:layout_marginStart="16dp"
            android:text="Male" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Female" />
    </RadioGroup>

    <TextView
        android:id="@+id/hobbies_text"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@+id/gender"
        android:layout_margin="16dp"
        android:text="Hobbies"/>

    <CheckBox
        android:id="@+id/hobby_singing"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@+id/hobbies_text"
        android:text="Singing"/>

    <CheckBox
        android:id="@+id/hobby_playing"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@+id/hobby_singing"
        android:text="Playing"/>

    <Button
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hobby_playing"
        android:text="Signup"/>

</RelativeLayout>
